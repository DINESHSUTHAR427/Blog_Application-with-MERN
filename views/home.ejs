<!DOCTYPE html>
<html lang="en">
<head>
    <%-  include('./partials/head.ejs')  %>
    <title>Home pages</title>
    <style>
        video {
      width: 100%;       /* Full width */
      height: auto;      /* Maintain aspect ratio */
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.3);
    }

    /* Example: Video as background */
    .video-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;  /* Ensures video covers the screen */
      z-index: -1;        /* Send behind content */
    }

    h1 {
      position: relative;
      color: white;
      text-align: center;
      margin-top: 20%;
      font-size: 3rem;
    }

        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            border: none;
            border-radius: 10px;
            overflow: hidden; /* Ensures image corners are rounded */
            background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent background */
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.2);
            
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .btn-primary {
            background-color: whitesmoke;
            border-color: black;
        }
        .btn-primary:hover {
            background-color: grey;
            border-color: black;
        }
    </style>
</head>
<body>
    <%-  include('./partials/nav.ejs')  %>
    <video autoplay muted loop class="video-bg">
    <source src="background video.mp4" type="video/mp4">
  </video>
    <div class="container mt-4">
        <div class="row">
                <% blogs.forEach(blog => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="blog image">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title" style="color: azure;"><%= blog.title%></h5>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto" style="color: black;">View Blog</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
        </div>
     </div>
     
    <%-include('./partials/scripte.ejs')  %>
    
</body>
</html>