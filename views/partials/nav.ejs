<style>
.navbar-blurry {
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px); /* For Safari */
  background-color: rgba(255, 255, 255, 0.3) !important; /* Slightly white transparent background, !important to override others */
  border-radius: 15px;
  margin: 10px;
  padding: 5px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.nav-link, .navbar-brand {
  text-shadow: 0 2px 4px rgba(0,0,0,0.5);
  color: #000 !important;
  transition: transform 0.2s ease-in-out;
}

.nav-link:hover, .navbar-brand:hover {
  transform: scale(1.05);
}

.dropdown-menu {
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  background-color: rgba(255, 255, 255, 0.3) !important;
  border-radius: 10px;
  border: none;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.dropdown-item {
  color: #000 !important;
  text-shadow: 0 1px 2px rgba(0,0,0,0.4);
  transition: background-color 0.2s ease-in-out;
}

.dropdown-item:hover {
  background-color: rgba(255, 255, 255, 0.5) !important;
}


@media (max-width: 768px) {
  .navbar-blurry {
    margin: 5px;
    padding: 2px;
  }
}
</style>
<nav class="navbar navbar-expand-lg bg-transparent navbar-blurry">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Blogify</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item ">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <% if (locals.user) { %>
         <li class="nav-item">
          <a class="nav-link" href="/blog/add-new">Add Blog</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            dinesh suthar
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item " href="/user/logout">Logout</a></li>
           
          </ul>
        </li>
        <% } else { %>
           <li class="nav-item">
          <a class="nav-link" href="/user/signup">SignUp</a>
        </li>
          <li class="nav-item">
          <a class="nav-link" href="/user/signin">SignIn</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<% if (locals.error) { %>
<div class="alert alert-danger" role="alert">
  <%= locals.error%>
</div>
<% } %>